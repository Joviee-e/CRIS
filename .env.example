# =============================
# BASIC FLASK APP CONFIG
# =============================
FLASK_ENV=development
FLASK_APP=run.py
PORT=5000

# =============================
# DATABASE CONFIG
# =============================
# LOCAL DEVELOPMENT (SQLite)
DATABASE_URL=sqlite:///dev.db

# FOR STAGING / PRODUCTION (Oracle):
# Format (example):
# DATABASE_URL=oracle+oracledb://USERNAME:PASSWORD@hostname:1521/?service_name=SERVICE

# OPTIONAL: Oracle Instant Client (if railway gives you the package)
# ORACLE_INSTANT_CLIENT_DIR=C:\instantclient_19_10

# =============================
# JWT
# =============================
JWT_SECRET_KEY=supersecretdevkey

# =============================
# CORS
# =============================
CORS_ORIGINS=http://localhost:3000

# =============================
# FILE STORAGE (used later)
# =============================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10_000_000  # 10 MB

# =============================
# S3 / CLOUD STORAGE PLACEHOLDERS (if needed later)
# =============================
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=
